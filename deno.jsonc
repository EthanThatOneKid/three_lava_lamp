{
  "compilerOptions": {
    "lib": ["dom", "deno.window"]
  },
  "tasks": {
    "bundle": "deno run -Ar https://deno.land/x/bndl/main.ts --input ./main.ts --output ./static/main.js",
    "start": "deno run -Ar https://deno.land/std/http/file_server.ts ./static",
    "lock": "deno cache --lock=deno.lock --lock-write main.ts",
    "udd": "deno run -Ar https://deno.land/x/udd/main.ts main.ts && deno task lock"
  }
}
